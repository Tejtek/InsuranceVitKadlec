@model InsuranceVitKadlec.Models.InsuredesInsurences

@{
    ViewData["Title"] = "Úprava služby";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
                <div class="form-group" @(this.User.IsInRole("Admin") ? "" : "hidden")>
                    <label asp-for="InsuredId" class="control-label"></label>
                    <select asp-for="InsuredId" class="form-control" asp-items="ViewBag.InsuredId"></select>
                    <span asp-validation-for="InsuredId" class="text-danger"></span>
                </div>
             <div class="form-group">
                <label asp-for="InsurenceId" class="control-label"></label>
                <select asp-for="InsurenceId" class="form-control" asp-items="ViewBag.InsurenceId"></select>
                <span asp-validation-for="InsurenceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsurenceValue" class="control-label"></label>
                <input asp-for="InsurenceValue" class="form-control" />
                <span asp-validation-for="InsurenceValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsurenceSubject" class="control-label"></label>
                <input asp-for="InsurenceSubject" class="form-control" />
                <span asp-validation-for="InsurenceSubject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValidFrom" class="control-label"></label>
                <input asp-for="ValidFrom" class="form-control" />
                <span asp-validation-for="ValidFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValidTo" class="control-label"></label>
                <input asp-for="ValidTo" class="form-control" />
                <span asp-validation-for="ValidTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TerminationReason" class="control-label"></label>
                <input asp-for="TerminationReason" class="form-control" />
                <span asp-validation-for="TerminationReason" class="text-danger"></span>
            </div>

            <div class="form-group">
                <br/>
                <input type="submit" value="Uložit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Zpět</a>
</div>

